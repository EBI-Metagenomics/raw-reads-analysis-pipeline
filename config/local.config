docker {
    enabled = true
    autoMounts = true
    fixOwnership = true
}

process {
    executor = 'local'

    withName: MOTUS_PROFILE {
        cpus = 4
        maxForks = 1
        memory = '10.0 GB'
    }
    withName: INFERNAL_CMSEARCH {
        cpus = 4
        memory = '22.0 GB'
    }
    withName: HMMER_HMMSEARCH {
        cpus = 4
        memory = '22.0 GB'
    }
    withName: CMSEARCHTBLOUTDEOVERLAP {
        cpus = 1
        memory = '200 MB'
    }
    withName: 'PIPELINE:DECONTAM_SHORTREAD:BWAMEM2_ALIGN_HOST' {
        cpus = 3
        memory = '24.0 GB'
    }
    withName: 'PIPELINE:DECONTAM_SHORTREAD:BWAMEM2_ALIGN_PHIX' {
        cpus = 3
        memory = '8.0 GB'
    }
    withName: 'PIPELINE:DECONTAM_LONGREAD:MINIMAP2_ALIGN' {
        cpus = 3
        memory = '22.0 GB'
    }
    withName: EXTRACTCOORDS {
        cpus = 1
        memory = '5.0 GB'
    }
    withName: EASEL_ESLSFETCH {
        cpus = 1
        memory = '300 MB'
    }
    withName: FASTP {
        cpus = 4
        memory = '10 GB'
    }
    withName: KRONA_KTIMPORTTEXT {
        cpus = 1
        memory = '300 MB'
    }
    withName: MAPSEQ {
        cpus = 1
        memory = '10.0 GB'
    }
    withName: MAPSEQ2BIOM {
        cpus = 1
        memory = '200 MB'
    }
}
