docker {
    enabled = true
    autoMounts = true
    fixOwnership = true
}

process {
    executor = 'local'

    withName: CMSEARCH {
        cpus = 1
        memory = '10.0 GB'
    }
    withName: CMSEARCH_DEOVERLAP {
        cpus = 1
        memory = '200 MB'
    }
    withName: QC {
        cpus = 2
        memory = '10 GB'
    }
    withName: DECONTAM_SHORTREAD {
        cpus = 2
        memory = '64.0 GB'
    }
    withName: DECONTAM_LONGREAD {
        cpus = 2
        memory = '64.0 GB'
    }
    withName: EASEL_EXTRACT_BY_COORD {
        cpus = 1
        memory = '5.0 GB'
    }
    withName: EXTRACT_MODELS {
        cpus = 1
        memory = '300 MB'
    }
    withName: FASTP {
        cpus = 2
        memory = '10 GB'
    }
    withName: KRONA {
        cpus = 2
        memory = '300 MB'
    }
    withName: MAPSEQ {
        cpus = 2
        memory = '10.0 GB'
    }
    withName: MAPSEQ2BIOM {
        cpus = 1
        memory = '200 MB'
    }
    withName: MOTUS {
        cpus = 2
        memory = '10.0 GB'
    }
    withName: QC_STATS {
        cpus = 1
        memory = '200 MB'
    }
    withName: SEQTK {
        cpus = 2
    }
    withName: SEQPREP {
        cpus = 2
        memory = '500 MB'
    }
}
